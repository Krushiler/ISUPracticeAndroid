<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_background2"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <item android:right="24dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_filter_arrow" />
            </item>
        </layer-list>

    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_background2"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <item android:right="24dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_filter_arrow_up" />
            </item>
        </layer-list>

    </item>
</selector>