<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_background2"/>
                    <corners android:radius="@dimen/small_8"/>
                </shape>
            </item>
            <item android:right="24dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_clock_gray" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="@dimen/small_8"/>
                </shape>
            </item>
            <item android:right="24dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_clock_orange" />
            </item>
        </layer-list>

    </item>
</selector>