<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SandBase" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_light</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey1</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/weblysleekuisb</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.SandBase.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="colorPrimary">@color/grey5</item>
    </style>

    <style name="Widget.Sandbase.ErrorableTextInputEditText" parent="Theme.SandBase.TextInputEditText">
        <item name="android:background">@drawable/background_text_input_edit_text</item>
    </style>
    <style name="Button.Default" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">4dp</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:elevation" tools:targetApi="lollipop">1dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">.0</item>
        <item name="font">@font/weblysleekuisb</item>
    </style>

    <style name="Widget.Sandbase.Button.TextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/weblysleekuisb</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="Button.Default.White" parent="Button.Default">
        <item name="android:textColor">@color/orange_dark</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/normal_16</item>
        <item name="strokeColor">@color/orange_dark</item>
        <item name="rippleColor">@color/orange_dark</item>
    </style>

    <style name="Button.Default.Orange" parent="Button.Default">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/orange_dark</item>
        <item name="cornerRadius">@dimen/normal_16</item>
    </style>

    <style name="Button.Default.White.TextOnly" parent="Button.Default">
        <item name="android:textColor">@color/orange_dark</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/normal_16</item>
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">@color/light_gray</item>
    </style>

    <style name="Button.Default.Gray" parent="Button.Default">
        <item name="android:textColor">@color/gray5</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/gray5</item>
        <item name="rippleColor">@color/gray5</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_theme</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonRounded">
        <item name="font">@font/weblysleekuisb</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="ButtonRounded.Orange" parent="ButtonRounded">
        <item name="strokeColor">@color/orange_dark</item>
        <item name="android:textColor">@color/orange_dark</item>
    </style>

    <style name="ButtonRounded.Gray" parent="ButtonRounded">
        <item name="strokeColor">@color/light_gray</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="InputEditText">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="cornerRadius">6dp</item>
        <item name="background">@drawable/background_text_input_edit_text</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/grey5</item>
    </style>

    <style name="InputTextEdit.Phone" parent="InputEditText">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">16</item>
    </style>

    <style name="InputTextEdit.Password" parent="InputEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="InputTextEdit.LayoutPassword" parent="InputEditText">
        <item name="android:hint">@string/password</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="fontFamily">@font/weblysleekuisb</item>
    </style>

    <style name="LabelTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="android:background">@color/grey1</item>
        <item name="font">@font/weblysleekuisb</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_dark</item>
    </style>

    <style name="BottomButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_layout_with_buttons_size</item>
        <item name="android:elevation" tools:targetApi="lollipop">10dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Sandbase.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_tint</item>
    </style>

    <style name="Widget.Sandbase.Checkbox.Purple" parent="Widget.Sandbase.Checkbox">
        <item name="buttonTint">@color/purple</item>
    </style>

    <style name="Widget.Sandbase.RangeSlider" parent="Widget.MaterialComponents.Slider">
        <item name="android:stepSize">1</item>
        <item name="android:valueFrom">1</item>
        <item name="android:valueTo">1000</item>
        <item name="values">@array/initial_offer_size_slider_values</item>
        <item name="trackColorActive">@color/orange_light</item>
        <item name="trackColorInactive">@color/orange_very_light</item>
        <item name="thumbRadius">10dp</item>
        <item name="tickVisible">false</item>
        <item name="labelStyle">@style/SliderTooltip</item>
        <item name="thumbColor">@color/orange_light</item>
    </style>

    <style name="SliderTooltip" parent="@style/Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/orange_light</item>
    </style>

    <style name="Material.OrangeButton" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="backgroundTint">@color/orange_dark</item>
    </style>
    <style name="CardViewContainer" parent="CardView.Light">
        <item name="cardElevation">@dimen/small_4</item>
        <item name="cardCornerRadius">@dimen/normal_16</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.Sandbase.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/background_tab_state_list</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabPaddingStart">@dimen/tab_item_default_padding</item>
        <item name="tabPaddingEnd">@dimen/tab_item_default_padding</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabTextColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/tab_item_text_size</item>
        <item name="tabTextAppearance">@style/Widget.Sandbase.TabLayout.TextAppearance</item>
    </style>

    <style name="Widget.Sandbase.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_item_text_size</item>
        <item name="android:fontFamily">@font/weblysleekuisb</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Sandbase.LabelBodyEditText" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/shape_for_field_details_screen</item>
        <item name="android:labelTextSize">6sp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="editBackground">@drawable/background_label_edittext_editing</item>
        <item name="editTextColor">@color/black</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="InfoItemView">
        <item name="android:fontFamily">@font/weblysleekuisb</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>
    <style name="ButtonBurgerNavigation">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>

    </style>

    <style name="Widget.Sandbase.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/orange_dark</item>
        <item name="trackColor">@color/grey4</item>
        <item name="indicatorSize">@dimen/circular_progress_radius</item>
        <item name="android:indeterminate">false</item>
    </style>

    <style name="Widget.Sandbase.TextView.Small" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/weblysleekuisb</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:scaleY">0.5</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="colorControlNormal">@color/lemon</item>
        <item name="colorControlActivated">@color/lemon</item>
    </style>

    <style name="RedButtonDelete">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:letterSpacing">.0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Widget.Sandbase.CheckBox.Material" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="fontFamily">@font/weblysleekuil</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="buttonTint">@color/purple</item>
    </style>

    <style name="Widget.Sandbase.CheckBox.Material.LightOrange" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/grey3</item>
        <item name="colorControlActivated">@color/orange_light</item>
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selector_enabled_disabled_text_color</item>
    </style>

    <style name="Widget.Sandbase.CheckBox.Material.Orange" parent="Widget.Sandbase.CheckBox.Material">
        <item name="buttonTint">@color/orange</item>
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textColor">@drawable/selector_enabled_disabled_text_color</item>
    </style>

    <style name="Widget.Sandbase.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/selector_enabled_disabled_text_color</item>
        <item name="colorOnSecondary">@color/grey3</item>
        <item name="buttonTint">@drawable/selector_enabled_disabled_button_color</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textAppearance">@style/Widget.Sandbase.RadioButton.TextAppearance</item>
    </style>

    <style name="Widget.Sandbase.RadioButton.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/weblysleekuisb</item>
        <item name="fontFamily">@font/weblysleekuisb</item>
    </style>

    <style name="Widget.Sandbase.Spinner.Default" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/background_spinner_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Widget.Sandbase.EditText.Default" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textCursorDrawable">@drawable/cursor_orange</item>
        <item name="android:background">@drawable/background_label_edittext_editing</item>
        <item name="android:padding">@dimen/normal_16</item>
        <item name="android:minHeight">@dimen/label_body_default_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:fontFamily">@font/weblysleekuisb</item>
    </style>

    <style name="Widget.Sandbase.NumberPicker" parent="Theme.SandBase">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Widget.Sandbase.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Widget.Sandbase.BottomSheetView" parent="Widget.MaterialComponents.BottomSheet">
        <item name="behavior_peekHeight">@dimen/bottom_sheet_peek_height</item>
        <item name="behavior_halfExpandedRatio">0.6</item>
        <item name="behavior_hideable">false</item>
        <item name="android:elevation">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>


    <style name="ShapeAppearance.Sandbase.BottomSheetView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">160dp</item>
    </style>

    <style name="Widget.Sandbase.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/dark_gray</item>
        <item name="elevation">4dp</item>

    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.Sandbase.FAB.purpleIcon" parent="Widget.Sandbase.FAB">
        <item name="tint">@color/darkPurple1</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="backgroundTint">@color/orange_dark</item>
    </style>

    <style name="DialogTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="DialogContentHint" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="DialogContent" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="fontFamily">@font/weblysleekuisb</item>
    </style>

    <style name="SpinnerDropDown" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="colorAccent">@color/grey3</item>
        <item name="colorOnPrimary">@color/grey3</item>
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OrderItemTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OrderItemContent" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OrderItemContentHint" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textColor">@color/grey4</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AddressSearchHint" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AddressSearchResult" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Sandbase.CalendarView" parent="@android:style/Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="colorAccent">@color/orange_light</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="MeasureSpinnerItem" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/weblysleekuisb</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="Widget.Sandbase.TextInputLayout.Settings" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">none</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="hintTextColor">@color/gray_hint</item>
    </style>

    <style name="Widget.Sandbase.TextInputEditText.Settings" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="textColorDisabled">@color/gray_hint</item>
        <item name="android:textColor">@drawable/text_disabled_enabled_color_black</item>
    </style>

    <style name="Widget.Sandbase.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/item_ratingbar</item>
        <item name="android:minHeight">@dimen/normal_16</item>
        <item name="android:maxHeight">@dimen/normal_16</item>
    </style>
</resources>