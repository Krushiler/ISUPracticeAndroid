<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/large_56"
    android:paddingHorizontal="5dp">

    <TextView
        android:id="@+id/tv_measure_type"
        style="@style/MeasureSpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/normal_16"
        android:fontFamily="@font/weblysleekuisb"
        android:text="@string/measurement_unit"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/arrow_spinner_measure"
        android:layout_width="@dimen/normal_24"
        android:layout_height="@dimen/large_44"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/normal_16"
        android:src="@drawable/ic_expand"
        app:tint="@color/dark_gray" />
</RelativeLayout>