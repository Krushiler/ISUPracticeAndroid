<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/large_56"
    android:overScrollMode="never"
    android:paddingHorizontal="5dp">

    <TextView
        android:id="@+id/tv_cargo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/normal_16"
        style="@style/DialogContent"
        android:text="@string/change_material"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_14" />

    <ImageView
        android:id="@+id/arrow_spinner_cargo"
        android:layout_width="@dimen/normal_24"
        android:layout_height="@dimen/large_44"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/normal_16"
        android:src="@drawable/ic_expanded"
        app:tint="@color/gray_dark" />
</RelativeLayout>